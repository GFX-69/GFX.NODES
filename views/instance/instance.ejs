<script src="https://cdnjs.cloudflare.com/ajax/libs/xterm/3.14.5/xterm.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/xterm/3.14.5/xterm.min.css"/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xterm/3.14.5/addons/attach/attach.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xterm/3.14.5/addons/fit/fit.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>

<style>
    /* Responsive Glassmorphism Theme */
    :root {
        --primary: #6777ef;
        --primary-hover: #5166ea;
        --success: #47c363;
        --danger: #fc544b;
        --warning: #ffa426;
        --info: #3abaf4;
        --bg-color: #0f172a;
        --card-bg: rgba(30, 41, 59, 0.8);
        --card-border: rgba(255, 255, 255, 0.1);
    }

    /* Responsive Glass Buttons */
    .glass-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.8rem 1.2rem;
        border-radius: 0.75rem;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        cursor: pointer;
        border: none;
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 0.25rem;
    }

    .glass-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .glass-btn svg {
        margin-right: 0.5rem;
        width: 1.1rem;
        height: 1.1rem;
    }

    /* Button Variants */
    .btn-start {
        background: rgba(71, 195, 99, 0.15);
        border-color: rgba(71, 195, 99, 0.25);
    }

    .btn-restart {
        background: rgba(255, 164, 38, 0.15);
        border-color: rgba(255, 164, 38, 0.25);
    }

    .btn-stop {
        background: rgba(252, 84, 75, 0.15);
        border-color: rgba(252, 84, 75, 0.25);
    }

    .btn-plugins {
        background: rgba(58, 186, 244, 0.15);
        border-color: rgba(58, 186, 244, 0.25);
    }

    .btn-send {
        background: rgba(103, 119, 239, 0.25);
        border-color: rgba(103, 119, 239, 0.35);
    }

    /* Responsive Console */
    .console-wrapper {
        background: rgba(15, 23, 42, 0.7);
        border-radius: 0.75rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        overflow: hidden;
        margin-bottom: 1.5rem;
    }

    .console-header {
        padding: 1rem;
        background: rgba(15, 23, 42, 0.8);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .console-title {
        font-weight: 600;
        color: white;
        margin-bottom: 0.5rem;
    }

    .console-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    #terminal {
        padding: 1rem;
        min-height: 300px;
        background: #0a0a1a;
    }

    /* Responsive Input */
    .console-input-container {
        display: flex;
        gap: 0.75rem;
        padding: 1rem;
        background: rgba(15, 23, 42, 0.8);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    #console-input {
        flex-grow: 1;
        padding: 0.75rem 1rem;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 0.5rem;
        color: white;
        font-family: 'Fira Code', monospace;
    }

    /* Responsive Stats */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }

    .stat-card {
        background: rgba(30, 41, 59, 0.8);
        border-radius: 0.75rem;
        padding: 1.25rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* Mobile Optimizations */
    @media (max-width: 640px) {
        .glass-btn {
            padding: 0.7rem 1rem;
            font-size: 0.8rem;
        }
        
        .console-actions {
            justify-content: center;
        }
        
        #terminal {
            min-height: 250px;
            padding: 0.75rem;
            font-size: 0.9rem;
        }
        
        .console-input-container {
            flex-direction: column;
        }
        
        #send-command {
            width: 100%;
        }
    }
</style>

<!-- Main Content -->
<main class="container mx-auto px-4 py-6">
    <%- include('../components/instance') %>
    
    <div id="alert-container" class="mb-6"></div>
    
    <!-- Console Section -->
    <div class="console-wrapper">
        <div class="console-header">
            <h3 class="console-title">Server Console</h3>
            <div class="console-actions">
                <button id="startButton" class="glass-btn btn-start">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Start
                </button>
                <button id="restartButton" class="glass-btn btn-restart">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    Restart
                </button>
                <button id="stopButton" class="glass-btn btn-stop">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 10a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 01-1-1v-4z" />
                    </svg>
                    Stop
                </button>
                <button onclick="window.location.href='/instance/<%= req.params.id %>/plugins'" class="glass-btn btn-plugins">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    Plugins
                </button>
            </div>
        </div>
        
        <div id="terminal"></div>
        
        <div class="console-input-container">
            <input type="text" id="console-input" placeholder="Enter command...">
            <button id="send-command" class="glass-btn btn-send">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                </svg>
                Send
            </button>
        </div>
    </div>
    
    <!-- Stats Section -->
    <div class="stats-grid">
        <!-- CPU Card -->
        <div class="stat-card">
            <div class="stat-title">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                </svg>
                CPU Usage
            </div>
            <div class="stat-value" id="cpuUsage">0%</div>
            <div class="progress-container">
                <div class="progress-bar cpu-progress" id="cpuProgressBar" style="width: 0%"></div>
            </div>
        </div>
        
        <!-- RAM Card -->
        <div class="stat-card">
            <div class="stat-title">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                </svg>
                Memory Usage
            </div>
            <div class="stat-value" id="ramUsage">0 MB / 0 MB</div>
            <div class="progress-container">
                <div class="progress-bar ram-progress" id="ramProgressBar" style="width: 0%"></div>
            </div>
        </div>
        
        <!-- Disk Card -->
        <div class="stat-card">
            <div class="stat-title">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                </svg>
                Disk Usage
            </div>
            <div class="stat-value" id="diskUsage">0 MB / 0 MB</div>
            <div class="progress-container">
                <div class="progress-bar disk-progress" id="diskProgressBar" style="width: 0%"></div>
            </div>
        </div>
    </div>
</main>

